<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cl_header"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        <TextView
                android:id="@+id/tv_tips"
                android:text="开启或关闭通知亮屏需要1~10秒生效\n请耐心等待"
                android:gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_status"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_tips"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="当前状态"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_control"
                app:layout_constraintTop_toTopOf="@id/tv_status"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                app:rippleColor="@color/blue"
                android:backgroundTint="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:paddingEnd="15dp"
                app:cornerRadius="20dp"
                android:text="我要关闭"
                android:textColor="#FFF"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:id="@+id/ll_middle"
            app:layout_constraintTop_toBottomOf="@id/cl_header"
            app:layout_constraintBottom_toTopOf="@id/btn_bottom"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <com.symeonchen.uicomponent.views.StatusItem
                android:id="@+id/main_item_service"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

        <com.symeonchen.uicomponent.views.StatusItem
                android:id="@+id/main_item_permission_notification"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

    </LinearLayout>


    <Button
            android:transitionName="bottombottombottom"
            android:id="@+id/btn_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="bottom"
            android:text="设置"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent" android:layout_height="50dp">
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>

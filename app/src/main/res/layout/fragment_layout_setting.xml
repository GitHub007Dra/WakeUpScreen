<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:transitionName="bottombottombottom"
            android:id="@+id/btn_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="bottom"
            android:text="设置"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent" android:layout_height="50dp">
    </Button>

    <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/btn_top"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:divider="@drawable/shape_divider"
            android:showDividers="end"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <com.symeonchen.wakeupscreen.views.SCSettingItem
                android:id="@+id/item_setting_wake_screen_time"
                app:sc_setting_item_title_main="亮屏时间"
                app:sc_setting_item_title_second="2s"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

        <com.symeonchen.wakeupscreen.views.SCSettingItem
                app:sc_setting_item_title_main="口袋防误触"
                app:sc_setting_item_title_second="开发中"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>
        <com.symeonchen.wakeupscreen.views.SCSettingItem
                app:sc_setting_item_title_main="分应用过滤"
                app:sc_setting_item_title_second="开发中"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>
        <com.symeonchen.wakeupscreen.views.SCSettingItem
                app:sc_setting_item_title_main="快捷开关"
                app:sc_setting_item_title_second="开发中"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>